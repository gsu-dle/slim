{
  "name": "gsu-dle/slim",
  "homepage": "https://github.com/gsu-dle",
  "license": "MIT",
  "authors": [
    {
      "name": "Melody Forest",
      "email": "mforest@gsu.edu"
    },
    {
      "name": "Jeb Barger",
      "email": "jbarger@gsu.edu"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.5",
    "slim/slim": "^4.11",
    "php-di/php-di": "^7.0",
    "php-di/slim-bridge": "^3.3",
    "vlucas/phpdotenv": "^5.5",
    "laminas/laminas-diactoros": "^2.24",
    "laminas/laminas-httphandlerrunner": "^2.5",
    "monolog/monolog": "^3.2",
    "symfony/cache": "^6.2",
    "twig/twig": "^3.5",
    "slim/twig-view": "^3.3"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.3",
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^9.5",
    "jangregor/phpstan-prophecy": "^1.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/phpstan-phpunit": "^1.3"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "GAState\\Web\\Slim\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GAState\\Web\\Slim\\Test\\": "tests/src/"
    }
  },
  "scripts": {
    "phpcs": "phpcs -p --colors --standard=PSR12 src tests/src",
    "phpstan": [
      "phpstan clear-result-cache",
      "phpstan analyse -c phpstan.neon"
    ],
    "test": "phpunit"
  }
}
